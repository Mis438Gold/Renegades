<%= form_for [:admin, @event] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @event,
          :include_object_name => true
        } %>
  
  <div class='field'>
    <%= f.label :Title -%>
    <%= f.text_field :Title, :class => 'larger widest' -%>
  </div>
  
  <div class='field'>
    <%= f.label :startdate -%>
    <%= f.datetime_select :startdate -%>
  </div>
  
  <div class='field'>
    <%= f.label :enddate -%>
    <%= f.datetime_select :enddate -%>
  </div>

  <div class='field'>
    <%= f.label :"Event Type" -%>
    <% if false %>
    <%= collection_select(:event, :event_type_id, EventType.find(:all, :order => "name"), :id, :name, {:selected => @event.event_type_id}, {:multiple =>false}) -%>
    <% end %>
    <%= select(:event, :event_type_id, EventType.all.collect {|et| [et.name, et.id]}) %>
  </div>

  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:description].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to part.to_s.titleize, "##{part}" %>
          </li>
        <% end %>
      </ul>

      <div id='page_part_editors'>
        <% [:description].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.events.event'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @event.Title)
              } %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
