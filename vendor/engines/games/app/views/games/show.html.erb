<% content_for :body_content_title do %>
  <%= @game.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @game.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @game.description %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="games">
      <% @games.each do |game| %>
        <li>
          <%= link_to game.title, game_url(game) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
